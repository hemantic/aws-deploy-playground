[
  {
    "name": "${service_name}",
    "image": "${image_name}:latest",
    "cpu": 10,
    "memory": 256,
    "entryPoint": [
      "sh",
      "-c"
    ],
    "command": [
      "uwsgi --http :80 --module srv.web:app --workers 1 --threads 1"
    ],
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 80,
        "protocol": "tcp"
      }
    ],
    "logConfiguration": {
    "logDriver": "awslogs",
    "options": {
        "awslogs-group": "${service_name}",
        "awslogs-region": "${aws_region}"
      }
    }
  }
]