[
  {
    "name": "${service_name}",
    "image": "${image_name}:latest",
    "cpu": 10,
    "memory": 256,
    "entryPoint": [
      "sh",
      "-c"
    ],
    "command": [
      "{command}"
    ],
    "secrets": [
      {
        "name": "SAMPLE_ENV_VAR",
        "valueFrom": "${data.aws_ssm_parameter.sample_env_var.arn}"
      }
    ],
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 80,
        "protocol": "tcp"
      }
    ],
    "logConfiguration": {
    "logDriver": "awslogs",
    "options": {
        "awslogs-group": "${service_name}",
        "awslogs-region": "${aws_region}"
      }
    }
  }
]